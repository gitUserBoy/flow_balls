<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:id="@android:id/background">
    <shape>
        <corners android:radius="0.0dip"/>
        <gradient android:startColor="#EEEEEE" android:endColor="#EEEEEE" android:angle="180.0"/>
    </shape>
</item>

<item android:id="@android:id/progress">
<clip>
    <shape>
        <corners android:radius="0.0dip" />
        <gradient android:startColor="@color/colorAccent" android:endColor="@color/progressColor"
            android:centerColor="@color/progressColor" android:angle="180.0" />
    </shape>
</clip>
</item>
</layer-list>